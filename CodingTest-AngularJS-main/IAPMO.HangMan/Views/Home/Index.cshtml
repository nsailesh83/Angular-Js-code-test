@{
    ViewBag.Title = "Home Page";
}
<style>
    .header-btn {
        height:100px;
        width:260px;
        font-size: 30px;
    }
</style>

<div data-ng-app="GameApp" ng-strict-di ng-controller="GameController as vm">
    <div class="text-center">
        <button class="btn btn-default header-btn" ng-if="vm.isGameComplete">
            Reset
        </button>
        <button class="btn btn-success header-btn" ng-click="vm.startGame()">
            Start
        </button>

    </div>
    <hr />
    <div ng-if="vm.game.hangman">
        <div class="row text-center">
            <p style="font-size: 80px">
                {{vm.game.hangman}}
            </p>
        </div>
        <br/>
        <div class="row text-center">
            <input ng-model="vm.letter" type="text" style="width:80px; height: 80px; font-size: 80px"/>
        </div>
        <br/>
        <div class="row text-center">
            <button class="btn btn-info" style="height: 100px; width: 100px; font-size: 20px" ng-click="vm.guessLetter()" >
                Guess
            </button>
            <button class="btn btn-danger" style="height: 100px; font-size: 20px">
                Show Solution
            </button>
        </div>
    </div>
</div>
